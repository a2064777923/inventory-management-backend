<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nju.edu.erp.dao.SalarySheetDao">
    <select id="findAllStaff" resultMap="StaffWageInfo">
        select w.id , w.name, w.final_wage, w.card from staff_wage w
    </select>

    <select id="getLatest" resultMap="SalarySheetPOMap">
        select * from salary_sheet order by id desc limit 0,1 ;
    </select>

    <insert id="save" parameterType="SalarySheetPO">
        insert into salary_sheet (id,  operator, remark, total_amount, state, create_time)
        values (#{id},#{operator},#{remark},#{totalAmount},#{state}, #{createTime})
    </insert>

    <insert id="saveBatch" useGeneratedKeys="true" keyProperty="id">
        insert into salary_sheet_content (salary_sheet_id,name,grossSalary,personalIncomeTax,unemploymentInsurance,
                                          housingFund,finalSalary, bankNo, remark) values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.salarySheetId},#{item.name},#{item.grossSalary},#{item.personalIncomeTax},#{item.unemploymentInsurance}
            ,#{item.housingFund},#{item.finalSalary},#{item.bankNo},#{item.remark})
        </foreach>
    </insert>

    <select id="findAll" resultType="com.nju.edu.erp.model.po.SalarySheetPO">
        select * from salary_sheet;
    </select>
    <select id="findAllByState" resultType="com.nju.edu.erp.model.po.SalarySheetPO">
        select * from salary_sheet where state = #{state}
    </select>

    <select id="findContentBySalarySheetId" resultType="com.nju.edu.erp.model.po.SalarySheetContentPO">
        select * from salary_sheet_content where salary_sheet_id = #{salary_sheet_id}
    </select>

    <select id="findOneById" resultType="com.nju.edu.erp.model.po.SalarySheetPO">
        select * from salary_sheet where id=#{salarySheetId}
    </select>
    <update id="updateState">
        update salary_sheet
        set state = #{state}
        where id = #{salarySheetId}
    </update>

    <resultMap id="StaffWageInfo" type="com.nju.edu.erp.model.po.StaffWageInfoPO">
        <id column="id" property="staff_id"></id>
        <result column="name" property="name"></result>
        <result column="final_wage" property="wage"></result>
        <result column="card" property="bankNo"></result>
    </resultMap>

    <resultMap id="SalarySheetPOMap" type="com.nju.edu.erp.model.po.SalarySheetPO">
        <id column="id" property="id"></id>
        <result column="operator" property="operator"></result>
        <result column="remark" property="remark"></result>
        <result column="total_amount" property="totalAmount"></result>
        <result column="state" property="state"></result>
        <result column="create_time" property="createTime"></result>
    </resultMap>


</mapper>